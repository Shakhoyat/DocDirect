<AnchorPane prefHeight="648.0" prefWidth="977.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dox.docdirect.CartController">
    <children>
        <!-- Sidebar -->
        <AnchorPane layoutX="-4.0" prefHeight="666.0" prefWidth="178.0" style="-fx-background-color: #c30186;">
            <children>
                <Button fx:id="btn_home" layoutX="20.0" layoutY="77.0" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14;" text="Home" />
                <Button fx:id="btn_service" layoutX="20.0" layoutY="150.0" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14;" text="Services" />
                <Button fx:id="btn_doctor" layoutX="20.0" layoutY="232.0" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14;" text="Our Doctors" />
                <Button fx:id="btn_contact" layoutX="20.0" layoutY="314.0" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14;" text="Contact" />
                <Button fx:id="btn_about" layoutX="20.0" layoutY="403.0" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14;" text="About" />
                <Button layoutX="26.0" layoutY="471.0" mnemonicParsing="false" text="Checkout" />
            </children>
        </AnchorPane>

        <!-- Scrollable Content Area -->
        <AnchorPane layoutX="169.0" prefHeight="648.0" prefWidth="796.0">
            <children>
                <ScrollPane layoutX="0.0" layoutY="0.0">
                    <content>
                        <AnchorPane minHeight="648.0" minWidth="796.0">
                            <children>
                                <Label layoutX="14.0" layoutY="31.0" style="-fx-text-fill: #c30186;" text="My Cart">
                                    <font>
                                        <Font size="28.0" />
                                    </font>
                                </Label>

                                <!-- Appointment Details Section -->
                                <Label layoutX="10.0" layoutY="71.0" style="-fx-text-fill: #c30186;" text="Appointment Details">
                                    <font>
                                        <Font size="21.0" />
                                    </font>
                                </Label>
                                  <TableView fx:id="appointmentTableView" layoutX="10.0" layoutY="113.0" prefHeight="228.0" prefWidth="846.0" style="-fx-border-color: #c30186;">
                                      <columns>
                                          <TableColumn fx:id="colAppointmentDate" prefWidth="135.0" text="Appointment Date" />
                                          <TableColumn fx:id="colAppointmentTime" prefWidth="153.0" text="Appointment Time" />
                                          <TableColumn fx:id="colDoctorName" prefWidth="173.0" text="Doctor Name" />
                                          <TableColumn fx:id="colSpeciality" prefWidth="108.0" text="Speciality" />
                                          <TableColumn fx:id="colTaka" prefWidth="75.0" text="Taka" />
                                          <TableColumn fx:id="colPlace" prefWidth="108.0" text="Place" />
                                          <TableColumn fx:id="colAppointmentOptions" prefWidth="90.0" text="Options" />
                                      </columns>
                                  </TableView>

                                <!-- Service Details Section -->
                                <Label layoutX="10.0" layoutY="423.0" style="-fx-text-fill: #c30186;" text="Service Details">
                                    <font>
                                        <Font size="21.0" />
                                    </font>
                                </Label>
                                  <TableView fx:id="serviceTableView" layoutX="5.0" layoutY="467.0" prefHeight="197.0" prefWidth="694.0" style="-fx-border-color: #c30186;">
                                      <columns>
                                          <TableColumn fx:id="colQuantity" prefWidth="126.0" text="Quantity" />
                                          <TableColumn fx:id="colPrice" prefWidth="150.0" text="Taka" />
                                          <TableColumn fx:id="colServiceOptions" prefWidth="90.0" text="Options" />
                                          <TableColumn fx:id="colServiceName" prefWidth="324.0" text="Service Name" />
                                      </columns>
                                  </TableView>
                        <Button fx:id="itmRemBtn" layoutX="14.0" layoutY="355.0" mnemonicParsing="false" text="Remove item(s)" />
                            </children>
                        </AnchorPane>
                    </content>
                </ScrollPane>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
