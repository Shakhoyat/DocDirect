<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ScrollPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dox.docdirect.ourdoctorsController">
    <children>
        <!-- Sidebar -->
        <AnchorPane prefHeight="600.0" prefWidth="200.0" style="-fx-background-color: #2C3E50;">
            <children>
                <VBox layoutX="20.0" layoutY="80.0" spacing="20">
                    <children>
                        <Button fx:id="homeButton" text="Home" prefWidth="160.0"
                                style="-fx-background-color: #16A085; -fx-text-fill: white; -fx-font-size: 14px;" />
                        <Button fx:id="ourDoctorsButton" text="Our Doctors" prefWidth="160.0"
                                style="-fx-background-color: #16A085; -fx-text-fill: white; -fx-font-size: 14px;" />
                        <Button fx:id="servicesButton" text="Services" prefWidth="160.0"
                                style="-fx-background-color: #16A085; -fx-text-fill: white; -fx-font-size: 14px;" />
                        <Button fx:id="aboutButton" text="About" prefWidth="160.0"
                                style="-fx-background-color: #16A085; -fx-text-fill: white; -fx-font-size: 14px;" />
                        <Button fx:id="contactButton" text="Contact" prefWidth="160.0"
                                style="-fx-background-color: #16A085; -fx-text-fill: white; -fx-font-size: 14px;" />
                    </children>
                </VBox>
            </children>
        </AnchorPane>

        <!-- Doctors Section with ScrollPane -->
        <ScrollPane layoutX="220.0" layoutY="20.0" prefWidth="560.0" prefHeight="560.0" fitToWidth="true" style="-fx-background-color: transparent;">
            <content>
                <VBox spacing="30" prefWidth="540.0">
                    <children>
                        <Label text="Our Doctors" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />
                        <Label text="Meet our highly qualified medical specialists who are here to provide the best care."
                               style="-fx-font-size: 14px; -fx-text-fill: #7F8C8D;" wrapText="true" />

                        <!-- Doctor Profiles -->
                        <!-- Doctor 1 -->
                        <HBox spacing="20" style="-fx-background-color: #F9F9F9; -fx-padding: 15; -fx-border-color: #E0E0E0; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;">
                            <children>
                                <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@doctor1.jpg" />
                                    </image>
                                </ImageView>
                                <VBox spacing="5">
                                    <children>
                                        <Label text="Dr. Alice Smith" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495E;" />
                                        <Label text="Cardiologist - 10+ years experience" style="-fx-font-size: 14px; -fx-text-fill: #7F8C8D;" />
                                        <Label text="Specialist in heart diseases" style="-fx-font-size: 14px; -fx-text-fill: #7F8C8D;" />
                                        <Button fx:id="viewDetailsDoctor1" text="View Details"
                                                style="-fx-background-color: #C11C84; -fx-text-fill: white; -fx-font-size: 12px;" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <!-- Doctor 2 -->
                        <HBox spacing="20" style="-fx-background-color: #F9F9F9; -fx-padding: 15; -fx-border-color: #E0E0E0; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;">
                            <children>
                                <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@doctor2.jpg" />
                                    </image>
                                </ImageView>
                                <VBox spacing="5">
                                    <children>
                                        <Label text="Dr. John Doe" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495E;" />
                                        <Label text="Orthopedic Surgeon - 15+ years experience" style="-fx-font-size: 14px; -fx-text-fill: #7F8C8D;" />
                                        <Label text="Specialist in joint and bone issues" style="-fx-font-size: 14px; -fx-text-fill: #7F8C8D;" />
                                        <Button fx:id="viewDetailsDoctor2" text="View Details"
                                                style="-fx-background-color: #C11C84; -fx-text-fill: white; -fx-font-size: 12px;" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <!-- Doctor 3 -->
                        <HBox spacing="20" style="-fx-background-color: #F9F9F9; -fx-padding: 15; -fx-border-color: #E0E0E0; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;">
                            <children>
                                <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@doctor3.jpg" />
                                    </image>
                                </ImageView>
                                <VBox spacing="5">
                                    <children>
                                        <Label text="Dr. Emily Clark" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495E;" />
                                        <Label text="Dermatologist - 8+ years experience" style="-fx-font-size: 14px; -fx-text-fill: #7F8C8D;" />
                                        <Label text="Expert in skin care treatments" style="-fx-font-size: 14px; -fx-text-fill: #7F8C8D;" />
                                        <Button fx:id="viewDetailsDoctor3" text="View Details"
                                                style="-fx-background-color: #C11C84; -fx-text-fill: white; -fx-font-size: 12px;" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <!-- Add similar blocks for Doctor 4, 5, and 6 -->
                        <!-- Doctor 4 -->
                        <HBox spacing="20" style="-fx-background-color: #F9F9F9; -fx-padding: 15; -fx-border-color: #E0E0E0; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;">
                            <children>
                                <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@doctor4.jpg" />
                                    </image>
                                </ImageView>
                                <VBox spacing="5">
                                    <children>
                                        <Label text="Dr. Michael Brown" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495E;" />
                                        <Label text="Neurologist - 12+ years experience" style="-fx-font-size: 14px; -fx-text-fill: #7F8C8D;" />
                                        <Label text="Expert in brain and nerve disorders" style="-fx-font-size: 14px; -fx-text-fill: #7F8C8D;" />
                                        <Button fx:id="viewDetailsDoctor4" text="View Details"
                                                style="-fx-background-color: #C11C84; -fx-text-fill: white; -fx-font-size: 12px;" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <!-- Add Doctor 5 and 6 similarly -->
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
