<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dox.docdirect.ourdoctorsController">
    <children>
        <!-- Left Sidebar -->
        <AnchorPane prefHeight="600.0" prefWidth="200.0" style="-fx-background-color: #2C3E50;">
            <children>
                <Button fx:id="homeButton" layoutX="20.0" layoutY="80.0" mnemonicParsing="false"
                        style="-fx-background-color: #16A085; -fx-text-fill: white;" text="Home" />
                <Button fx:id="ourDoctorsButton" layoutX="20.0" layoutY="130.0" mnemonicParsing="false"
                        style="-fx-background-color: #16A085; -fx-text-fill: white;" text="Our Doctors" />
                <Button fx:id="servicesButton" layoutX="20.0" layoutY="180.0" mnemonicParsing="false"
                        style="-fx-background-color: #16A085; -fx-text-fill: white;" text="Services" />
                <Button fx:id="aboutButton" layoutX="20.0" layoutY="230.0" mnemonicParsing="false"
                        style="-fx-background-color: #16A085; -fx-text-fill: white;" text="About" />
                <Button fx:id="contactButton" layoutX="20.0" layoutY="280.0" mnemonicParsing="false"
                        style="-fx-background-color: #16A085; -fx-text-fill: white;" text="Contact" />
            </children>
        </AnchorPane>

        <!-- Doctors Section -->
        <VBox layoutX="220.0" layoutY="20.0" spacing="20">
            <children>
                <!-- Doctor 1 -->
                <HBox spacing="20">
                    <children>
                        <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@doctor1.jpg" />
                            </image>
                        </ImageView>
                        <VBox spacing="10">
                            <children>
                                <Label text="Dr. Alice Smith" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                                <Label text="Cardiologist - 10+ years experience" />
                                <Label text="Specialist in heart diseases" />
                                <Button fx:id="viewDetailsDoctor1" text="View Details"
                                        style="-fx-background-color: #C11C84; -fx-text-fill: white;" />
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <!-- Doctor 2 -->
                <HBox spacing="20">
                    <children>
                        <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@doctor2.jpg" />
                            </image>
                        </ImageView>
                        <VBox spacing="10">
                            <children>
                                <Label text="Dr. John Doe" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                                <Label text="Orthopedic Surgeon - 15+ years experience" />
                                <Label text="Specialist in joint and bone issues" />
                                <Button fx:id="viewDetailsDoctor2" text="View Details"
                                        style="-fx-background-color: #C11C84; -fx-text-fill: white;" />
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <!-- Doctor 3 -->
                <HBox spacing="20">
                    <children>
                        <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@doctor3.jpg" />
                            </image>
                        </ImageView>
                        <VBox spacing="10">
                            <children>
                                <Label text="Dr. Emily Clark" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                                <Label text="Dermatologist - 8+ years experience" />
                                <Label text="Expert in skin care treatments" />
                                <Button fx:id="viewDetailsDoctor3" text="View Details"
                                        style="-fx-background-color: #C11C84; -fx-text-fill: white;" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
