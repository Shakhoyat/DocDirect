<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dox.docdirect.DoctorListingController">
    <!-- Sidebar -->
    <VBox layoutX="10.0" layoutY="10.0" prefWidth="150.0" spacing="20" style="-fx-padding: 10; -fx-background-color: #001f3f;">
        <Button fx:id="home" text="Home" style="-fx-background-color: #ffffff; -fx-text-fill: #001f3f;" />
        <Button fx:id="services" text="Services" style="-fx-background-color: #ffffff; -fx-text-fill: #001f3f;" />
        <Button fx:id="doctor" text="Our Doctors" style="-fx-background-color: #ffffff; -fx-text-fill: #001f3f;" />
        <Button fx:id="about" text="About" style="-fx-background-color: #ffffff; -fx-text-fill: #001f3f;" />
        <Button fx:id="contact" text="Contact" style="-fx-background-color: #ffffff; -fx-text-fill: #001f3f;" />
    </VBox>

    <!-- Main Content Area -->
    <AnchorPane layoutX="170.0" layoutY="10.0" prefWidth="600.0" prefHeight="400.0">
        <ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true" prefWidth="600.0" prefHeight="400.0">
            <content>
                <GridPane fx:id="doctorGrid" hgap="10" vgap="10" style="-fx-padding: 10;">
                    <!-- Doctor cards will be dynamically added here -->
                </GridPane>
            </content>
        </ScrollPane>
    </AnchorPane>
</AnchorPane>
