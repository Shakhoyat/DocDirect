<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dox.docdirect.DashboardController">
    <children>
        <!-- Sidebar -->
        <AnchorPane prefHeight="600.0" prefWidth="200.0" style="-fx-background-color: #aa2679;">
            <children>
                <Button fx:id="homeButton" layoutX="30.0" layoutY="100.0" mnemonicParsing="false" prefWidth="140.0" style="-fx-background-color: #750d4d; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20 10 20; -fx-background-radius: 30;" text="Home" />
                <Button fx:id="servicesButton1" layoutX="30.0" layoutY="160.0" mnemonicParsing="false" prefWidth="140.0" style="-fx-background-color: #83175c; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20 10 20; -fx-background-radius: 30;" text="Services" />
                <Button fx:id="ourDoctorsButton" layoutX="30.0" layoutY="220.0" mnemonicParsing="false" prefWidth="140.0" style="-fx-background-color: #750d4d; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20 10 20; -fx-background-radius: 30;" text="Our Doctors" />
                <Button fx:id="aboutButton" layoutX="30.0" layoutY="280.0" mnemonicParsing="false" prefWidth="140.0" style="-fx-background-color: #83175c; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20 10 20; -fx-background-radius: 30;" text="About" />
                <Button fx:id="contactbutton" layoutX="30.0" layoutY="340.0" mnemonicParsing="false" prefWidth="140.0" style="-fx-background-color: #83175c; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20 10 20; -fx-background-radius: 30;" text="Contact" />
            </children>
        </AnchorPane>

        <!-- Main Content Area -->
        <AnchorPane layoutX="200.0" layoutY="0.0" prefHeight="600.0" prefWidth="600.0">
            <children>
                <!-- Header -->
                <ImageView fitHeight="50.0" fitWidth="50.0" layoutX="20.0" layoutY="20.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@logo.png" />
                    </image>
                </ImageView>
                <Label layoutX="80.0" layoutY="30.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #750d4d;" text="DocDirect" />
                <Button fx:id="bookAppointmentButton" layoutX="400.0" layoutY="25.0" mnemonicParsing="false" style="-fx-background-color: #83175c; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20 10 20; -fx-background-radius: 30;" text="Book an Appointment →" />

                <!-- Image Section -->
                <ImageView fitHeight="461.0" fitWidth="593.0" layoutX="5.0" layoutY="80.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@dashbackground.png" />
                    </image>
                </ImageView>

                <!-- Buttons in Content -->
                <Button fx:id="servicesButton2" layoutX="185.0" layoutY="329.0" mnemonicParsing="false" prefWidth="200.0" style="-fx-background-color: #83175c; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20 10 20; -fx-background-radius: 30;" text="Explore Our Services →" />
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
